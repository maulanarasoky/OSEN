<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InputScore">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:fitsSystemWindows="true"
            app:contentScrim="#8a8a8a"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/classImage"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <View
                android:id="@+id/roundedTopDetails"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_view" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/ril"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input Nilai"
                android:fontFamily="@font/firasans"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true" />

            <TableLayout
                android:id="@+id/table1"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border"
                android:padding="@dimen/activity_vertical_margin">

                <TableRow>
                    <TextView
                        android:text="UTS"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/uts"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@android:style/Widget.EditText"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Persentase"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/persentaseUts"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@android:style/Widget.EditText"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/table2"
                android:layout_toEndOf="@id/table1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/table_border"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingEnd="10dp">

                <TableRow>
                    <EditText
                        android:id="@+id/uas"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@android:style/Widget.EditText"/>

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:text="UAS"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>
                    <EditText
                        android:id="@+id/persentaseUas"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@android:style/Widget.EditText"/>

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:text="Persentase"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/table3"
                android:layout_width="wrap_content"
                android:layout_below="@id/table1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border"
                android:padding="@dimen/activity_vertical_margin">

                <TableRow>
                    <TextView
                        android:text="Ass 1"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/ass1"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@android:style/Widget.EditText"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Persentase"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/persentaseAss1"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@android:style/Widget.EditText"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/table4"
                android:layout_below="@id/table2"
                android:layout_toEndOf="@id/table3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/table_border"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingEnd="10dp">

                <TableRow>
                    <EditText
                        android:id="@+id/ass2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@android:style/Widget.EditText"/>

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:text="Ass 2"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>
                    <EditText
                        android:id="@+id/persentaseAss2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@android:style/Widget.EditText"/>

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:text="Persentase"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/table5"
                android:layout_width="wrap_content"
                android:layout_below="@id/table3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border"
                android:padding="@dimen/activity_vertical_margin">

                <TableRow>
                    <TextView
                        android:text="Ass 3"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/ass3"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@android:style/Widget.EditText"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Persentase"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/persentaseAss3"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        style="@android:style/Widget.EditText"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/table5"
                android:text="Jika nilai tidak ada, cukup mengetikkan angka 0 di form tersebut"
                android:fontFamily="@font/firasans"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:padding="@dimen/activity_vertical_margin"
                android:textAlignment="center"
                android:textStyle="italic"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/inputScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:background="@drawable/background_button"
                android:layout_below="@id/warning"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
