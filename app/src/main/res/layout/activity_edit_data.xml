<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EditData">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:fitsSystemWindows="true"
            app:contentScrim="#8a8a8a"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/classImage"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />

            <View
                android:id="@+id/roundedTopDetails"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_view" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/ril"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/studentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/firasans"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="Nama" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:fontFamily="@font/firasans"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textStyle="italic"
                    tools:text="Gender" />
            </LinearLayout>
            <TableLayout
                android:id="@+id/table1"
                android:layout_below="@id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin">
                <TableRow>
                    <TextView
                        android:text="Alfa"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/alfa"
                        android:text="0"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">
                    <TextView
                        android:text="Sakit"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/sakit"
                        android:text="0"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/table2"
                android:layout_below="@id/linear2"
                android:layout_toEndOf="@id/table1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:padding="@dimen/activity_vertical_margin">
                <TableRow>
                    <TextView
                        android:text="Izin"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/izin"
                        android:text="0"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow android:layout_marginTop="@dimen/activity_vertical_margin">
                    <TextView
                        android:text="Hadir"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/hadir"
                        android:text="0"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/table3"
                android:layout_below="@id/linear2"
                android:layout_toEndOf="@id/table2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:padding="@dimen/activity_vertical_margin">
                <TableRow>
                    <TextView
                        android:text="Nilai"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:text=" : "
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/score"
                        android:text="0"
                        android:fontFamily="@font/firasans"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/table4"
                android:layout_below="@id/table1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin">
                <TableRow>
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerAbsent"
                        android:layout_width="120dp"
                        android:layout_height="50dp" />

                    <Button
                        android:id="@+id/btnAbsent"
                        android:text="Absen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Colored" />
                </TableRow>
            </TableLayout>
            <Button
                android:id="@+id/inputScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukkan Nilai"
                android:background="@drawable/background_button"
                android:layout_below="@id/table4"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
